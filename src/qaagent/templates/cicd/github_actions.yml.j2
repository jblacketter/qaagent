# Generated by qaagent - QA Automation Pipeline
# Framework: {{ framework }}
# Project: {{ project_name }}

name: QA Pipeline

on:
  push:
    branches: [main, master]
  pull_request:
    branches: [main, master]

env:
  PYTHON_VERSION: "{{ python_version }}"
  BASE_URL: ${{ "{{" }} secrets.BASE_URL {{ "}}" }}
{% if api_token %}
  API_TOKEN: ${{ "{{" }} secrets.API_TOKEN {{ "}}" }}
{% endif %}

jobs:
  qa-pipeline:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ "{{" }} env.PYTHON_VERSION {{ "}}" }}

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install qaagent
{% if framework == "fastapi" %}
          pip install -r requirements.txt
{% elif framework == "flask" %}
          pip install -r requirements.txt
{% elif framework == "django" %}
          pip install -r requirements.txt
{% endif %}

      # Bootstrap qaagent profile for CI
      - name: Configure qaagent
        run: |
          qaagent config init . --template {{ framework }} --name {{ project_name }}
          qaagent use {{ project_name }}

      - name: Discover routes
        run: qaagent analyze routes --format json --out routes.json

      - name: Assess risks
        run: qaagent analyze strategy --routes-file routes.json --out strategy.yaml
{% if suites.unit %}

      - name: Generate unit tests
        run: qaagent generate unit-tests --routes-file routes.json --out generated/unit

      - name: Run unit tests
        run: python -m pytest generated/unit -q --junitxml=reports/unit.xml
        continue-on-error: true
{% endif %}
{% if suites.behave %}

      - name: Generate BDD tests
        run: qaagent generate behave --routes-file routes.json --out generated/behave

      - name: Run BDD tests
        run: python -m behave generated/behave --junit --junit-directory reports/
        continue-on-error: true
{% endif %}
{% if suites.e2e %}

      - name: Generate E2E tests
        run: qaagent generate e2e --routes-file routes.json --out generated/e2e

      - name: Install Playwright
        run: |
          cd generated/e2e
          npm install
          npx playwright install --with-deps chromium

      - name: Run E2E tests
        run: |
          cd generated/e2e
          npx playwright test --reporter=junit
        continue-on-error: true
        env:
          BASE_URL: ${{ "{{" }} env.BASE_URL {{ "}}" }}
{% endif %}

      - name: Generate report
        if: always()
        run: qaagent report --fmt html --out reports/qa-report.html
        continue-on-error: true

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: qa-reports
          path: reports/
          retention-days: 30
{% if suites.unit or suites.behave %}

      - name: Publish test results
        if: always()
        uses: dorny/test-reporter@v1
        with:
          name: QA Test Results
          path: reports/*.xml
          reporter: java-junit
{% endif %}
