# QA Agent configuration (FastAPI)
project:
  name: "{{ context.project_name }}"
  type: "fastapi"

app:
  dev:
    base_url: "{{ context.base_url or 'http://localhost:8765' }}"
    start_command: "{{ context.start_command or 'uvicorn server:app --port 8765 --reload' }}"
    health_endpoint: "{{ context.health_endpoint or '/health' }}"

openapi:
  auto_generate: false
  spec_path: "{{ context.spec_path or 'openapi.yaml' }}"

# Test generation defaults
tests:
  output_dir: "tests/qaagent"
  behave:
    enabled: true
    output_dir: "tests/qaagent/behave"
    framework: "behave"
  unit:
    enabled: true
    output_dir: "tests/qaagent/unit"
    framework: "pytest"
  data:
    enabled: true
    output_dir: "tests/qaagent/fixtures"
    format: "json"

exclude:
  paths: []
  tags: []

risk_assessment:
  disable_rules:
    - "health_check_pagination"
  severity_thresholds: {}

llm:
  enabled: false
  provider: "ollama"
  model: "qwen2.5-coder:7b"
  fallback_to_templates: true
